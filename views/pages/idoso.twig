{% extends 'index.twig' %}

{% block content %}

    <form id="formIdoso" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" aria-describedby="Nome" placeholder="Enter name" required>
        </div>
        <div class="form-group">
            <label for="cpf">CPF</label>
            <input type="text" class="form-control" id="cpf" aria-describedby="Cpf" placeholder="Enter CPF" required>
        </div>
        <div class="form-group">
            <label for="dtNascimento">Data de Nascimento</label>
            <input type="date" class="form-control" id="dtNascimento" aria-describedby="dtNascimento" placeholder="Enter Data de Nascimento" required>
        </div>
        <div class="form-group">
            <label for="cep">CEP</label>
            <input type="text" class="form-control" id="cep" aria-describedby="cep" placeholder="Enter CEP" required>
        </div>

        <div class="form-group">
            <label for="logradouro">Logradouro</label>
            <input type="text" class="form-control" id="logradouro" aria-describedby="logradouro" placeholder="Enter logradouro" readonly>
        </div>
        <div class="form-group">
            <label for="complemento">Complemento</label>
            <input type="text" class="form-control" id="complemento" aria-describedby="complemento" placeholder="Enter complemento">
        </div>
        <div class="form-group">
            <label for="bairro">Bairro</label>
            <input type="text" class="form-control" id="bairro" aria-describedby="bairro" placeholder="Enter bairro" readonly>
        </div>
        <div class="form-group">
            <label for="cidade">Cidade</label>
            <input type="text" class="form-control" id="cidade" aria-describedby="cidade" placeholder="Enter cidade" readonly>
        </div>
        <div class="form-group">
            <label for="uf">UF</label>
            <input type="text" class="form-control" id="uf" aria-describedby="uf" placeholder="Enter UF" readonly>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

{% endblock %}